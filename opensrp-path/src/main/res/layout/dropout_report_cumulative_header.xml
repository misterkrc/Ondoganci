<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/adapter_divider_top"
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:layout_above="@+id/content"
        android:background="@color/light_grey" />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">


        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/tv"
            style="@style/CustomFontTextViewStyle.ClientList.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:text="Name"
            android:textColor="@color/text_black"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/cumulative_dropout"
                style="@style/CustomFontTextViewStyle.ClientList.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:paddingLeft="0dp"
                android:text="@string/cumulative_dropout"
                android:textColor="@color/text_black"
                android:textSize="17sp" />


            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/details"
                style="@style/CustomFontTextViewStyle.ClientList.Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="14%"
                android:textColor="@color/text_black"
                android:textSize="17sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:background="@color/light_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9">

                <org.smartregister.view.customcontrols.CustomFontTextView
                    style="@style/CustomFontTextViewStyle.ClientList.Light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/cohort_coverage_report_vertical_margin"
                    android:paddingLeft="@dimen/cohort_coverage_report_padding_left"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/cohort_coverage_report_vertical_margin"
                    android:text="@string/dropout_month_header"
                    android:textColor="@color/dark_grey"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4">

                <org.smartregister.view.customcontrols.CustomFontTextView
                    style="@style/CustomFontTextViewStyle.ClientList.Light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/cohort_coverage_report_vertical_margin"
                    android:paddingLeft="@dimen/cohort_coverage_report_padding_left"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/cohort_coverage_report_vertical_margin"
                    android:text="@string/dropout_started_completed_header"
                    android:textColor="@color/dark_grey"
                    android:textSize="18sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7">

                <org.smartregister.view.customcontrols.CustomFontTextView
                    style="@style/CustomFontTextViewStyle.ClientList.Light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingBottom="@dimen/cohort_coverage_report_vertical_margin"
                    android:paddingLeft="@dimen/cohort_coverage_report_padding_left"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/cohort_coverage_report_vertical_margin"
                    android:text="@string/dropout_percentage_header"
                    android:textColor="@color/dark_grey"
                    android:textSize="18sp" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:background="@color/light_grey" />

    </LinearLayout>


</RelativeLayout>